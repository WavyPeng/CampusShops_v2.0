<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wavy.o2o.dao.WechatAccountDao">
    <resultMap id="wechatAccountResultMap" type="com.wavy.o2o.entity.WechatAccount">
        <id column="wechat_auth_id" property="wechatAuthId" />
        <result column="open_id" property="openId" />
        <result column="create_time" property="createTime" />
        <association property="userInfo" column="user_id"
                     javaType="com.wavy.o2o.entity.UserInfo">
            <id column="user_id" property="userId" />
            <result column="name" property="name" />
            <result column="gender" property="gender" />
            <result column="email" property="email" />
            <result column="profile_img" property="profileImg" />
            <result column="user_type" property="userType" />
            <result column="create_time" property="createTime" />
            <result column="last_edit_time" property="lastEditTime" />
            <result column="enable_status" property="enableStatus" />
        </association>
    </resultMap>
    <select id="queryWechatInfoByOpenId" resultMap="wechatAccountResultMap"
            parameterType="String">
        SELECT
        w.wechat_auth_id,
        w.open_id,
        w.create_time,
        p.user_id,
        p.name,
        p.gender,
        p.email,
        p.profile_img,
        p.user_type,
        p.create_time,
        p.last_edit_time,
        p.enable_status
        FROM
        tb_wechat_account w
        LEFT JOIN
        tb_user_info
        p ON w.user_id =
        p.user_id
        WHERE
        w.open_id =
        #{openId}
    </select>
    <insert id="insertWechatAccount" parameterType="com.wavy.o2o.entity.WechatAccount"
            useGeneratedKeys="true" keyProperty="wechatAuthId" keyColumn="wechat_auth_id">
        INSERT
        INTO
        tb_wechat_account(user_id,open_id,create_time)
        VALUES
        (#{userInfo.userId},#{openId},#{createTime})
    </insert>
</mapper>