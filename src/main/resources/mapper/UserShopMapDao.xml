<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wavy.o2o.dao.UserShopMapDao">
    <resultMap id="userShopResultMap" type="com.wavy.o2o.entity.UserShopMap">
        <id column="user_shop_id" property="userShopId" />
        <result column="create_time" property="createTime" />
        <result column="point" property="point" />
        <association property="user" column="user_id" javaType="com.wavy.o2o.entity.UserInfo">
            <id column="user_id" property="userId" />
            <result column="name" property="name" />
        </association>
        <association property="shop" column="shop_id" javaType="com.wavy.o2o.entity.Shop">
            <id column="shop_id" property="shopId" />
            <result column="shop_name" property="shopName" />
        </association>
    </resultMap>
    <select id="queryUserShopMapList" resultMap="userShopResultMap">
        SELECT
        usm.user_shop_id,
        usm.create_time,
        usm.point,
        buyer.user_id,
        buyer.name,
        s.shop_id,
        s.shop_name
        FROM
        tb_user_shop_map usm,
        tb_user_info buyer,
        tb_shop s
        <where>
            usm.user_id = buyer.user_id
            AND
            usm.shop_id = s.shop_id
            <!-- 按顾客信息精确查询 -->
            <if test="userShopCondition.user!=null and
            userShopCondition.user.userId!=null">
                and usm.user_id = #{userShopCondition.user.userId}
            </if>
            <!-- 按店铺信息精确查询 -->
            <if test="userShopCondition.shop!=null and
            userShopCondition.shop.shopId!=null">
                and usm.shop_id = #{userShopCondition.shop.shopId}
            </if>
            <!-- 按顾客姓名模糊查询 -->
            <if test="userShopCondition.user!=null and
            userShopCondition.user.name!=null">
                and buyer.name like '%${userShopCondition.user.name}%'
            </if>
            <!-- 按店铺名称模糊查询 -->
            <if test="userShopCondition.shop!=null and 
            userShopCondition.shop.shopName!=null">
                and s.shop_name like '%${userShopCondition.shop.shopName}%'
            </if>
            <!-- 按创建时间范围查询 -->
            <if test="userShopCondition.createTime!=null">
                and usm.create_time > #{userShopCondition.createTime}
            </if>
        </where>
        limit #{rowIndex},#{pageSize};
    </select>
    <select id="queryUserShopMapCount" resultType="int">
        SELECT count(1)
        FROM
        tb_user_shop_map usm,
        tb_user_info buyer,
        tb_shop s
        <where>
            usm.user_id = buyer.user_id
            AND
            usm.shop_id = s.shop_id
            <!-- 按顾客信息精确查询 -->
            <if test="userShopCondition.user!=null and
            userShopCondition.user.userId!=null">
                and usm.user_id = #{userShopCondition.user.userId}
            </if>
            <!-- 按店铺信息精确查询 -->
            <if test="userShopCondition.shop!=null and
            userShopCondition.shop.shopId!=null">
                and usm.shop_id = #{userShopCondition.shop.shopId}
            </if>
            <!-- 按顾客姓名模糊查询 -->
            <if test="userShopCondition.user!=null and
            userShopCondition.user.name!=null">
                and buyer.name like '%${userShopCondition.user.name}%'
            </if>
            <!-- 按店铺名称模糊查询 -->
            <if test="userShopCondition.shop!=null and
            userShopCondition.shop.shopName!=null">
                and s.shop_name like '%${userShopCondition.shop.shopName}%'
            </if>
            <!-- 按创建时间范围查询 -->
            <if test="userShopCondition.createTime!=null">
                and usm.create_time > #{userShopCondition.createTime}
            </if>
        </where>
    </select>
    <select id="queryUserShopMap" resultMap="userShopResultMap" parameterType="long">
        SELECT
        usm.user_shop_id,
        usm.create_time,
        usm.point,
        buyer.user_id,
        buyer.name,
        s.shop_id,
        s.shop_name
        FROM
        tb_user_shop_map usm,
        tb_user_info buyer,
        tb_shop s
        WHERE
        usm.user_id = buyer.user_id
        AND
        usm.shop_id = s.shop_id
        AND
        usm.user_id = #{userId}
        AND
        usm.shop_id = #{shopId}
    </select>
    <insert id="insertUserShopMap" parameterType="com.wavy.o2o.entity.UserShopMap"
    useGeneratedKeys="true" keyProperty="userShopId" keyColumn="user_shop_id">
        INSERT INTO
        tb_user_shop_map(user_id,shop_id,create_time,point)
        VALUES (#{user.userId},#{shop.shopId},#{createTime},#{point})
    </insert>
    <update id="updateUserShopMapPoint" parameterType="com.wavy.o2o.entity.UserShopMap"
            keyProperty="userShopId" keyColumn="user_shop_id" useGeneratedKeys="true">
        UPDATE tb_user_shop_map
        SET point=#{point}
        WHERE
        user_id = #{user.userId}
        AND
        shop_id = #{shop.shopId}
    </update>
</mapper>